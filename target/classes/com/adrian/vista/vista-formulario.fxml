<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vistaFormularioRoot" spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.adrian.vista.VistaFormulario"
    prefWidth="400" prefHeight="350">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text text="Formulario de Registro" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Nombre" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="campoNombre" promptText="Nombre del dragón"
            GridPane.rowIndex="1" GridPane.columnIndex="0" />

        <Label text="Raza" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="campoRaza" promptText="Raza del dragón"
            GridPane.rowIndex="3" GridPane.columnIndex="0" />

        <Label text="Tamaño" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="campoTamaño" promptText="Tamaño del dragón"
            GridPane.rowIndex="5" GridPane.columnIndex="0" />

        <Label text="Color" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="campoColor" promptText="Color de escamas"
            GridPane.rowIndex="7" GridPane.columnIndex="0" />
    </GridPane>

    <Button text="Enviar" prefWidth="200" onAction="#enviarFormulario" />
</VBox>